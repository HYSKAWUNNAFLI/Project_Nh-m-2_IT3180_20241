<div class="container">
    <h1>All Products</h1>
    <div class="product-list">
        {{#each products}}
        <div class="product-card">
            <!-- Hiển thị ảnh sản phẩm từ URL -->
            <img src="{{this.product_image}}" alt="{{this.product_title}}" class="product-image">
            <div class="product-details">
                <h2 class="product-title">{{this.product_title}}</h2>
            
            </div>
            <div class="product-price">
                Price: ${{this.product_price}}
            </div>
            <div class="product-footer">
                <a href="/products/{{this.product_id}}" class="btn">View Details</a>
            </div>
        </div>
        {{/each}}
    </div>

    <div class="pagination">
    {{#if currentPageGt1}}
    <a href="/product?page={{currentPageMinus1}}" class="page-link">‹</a>
    {{/if}}

    {{#each pagination}}
    <a href="/product?page={{this.pageNumber}}" class="page-link {{#if this.isActive}}active{{/if}}">
        {{this.pageNumber}}
    </a>
    {{/each}}

    {{#if currentPageLtTotalPages}}
    <a href="/product?page={{currentPagePlus1}}" class="page-link">›</a>
    {{/if}}
</div>

<style>
    .pagination {
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 20px 0;
        font-size: 16px;
    }

    .page-link {
        margin: 0 5px;
        padding: 10px 15px;
        text-decoration: none;
        border: 1px solid #ddd;
        border-radius: 4px;
        color: #333;
        font-weight: normal;
    }

    .page-link.active {
        background-color: #007bff;
        color: #fff;
        font-weight: bold;
    }

    .page-link:hover {
        background-color: #0056b3;
        color: #fff;
    }
</style>

