<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Intersection Observer configuration
        const observerOptions = {
            root: null,
            rootMargin: '0px',
            threshold: 0.1
        };

        // Callback function when element is intersecting
        const observerCallback = (entries, observer) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('appear');
                    // Unobserve after animation
                    observer.unobserve(entry.target);
                }
            });
        };

        // Create observer
        const observer = new IntersectionObserver(observerCallback, observerOptions);

        // Observe all elements that should animate
        const elements = document.querySelectorAll('.col-4, .title, .black-container, .offer, .testimonial, .col-3, .brands');
        elements.forEach(element => observer.observe(element));

        // Lazy loading for images
        const imageObserver = new IntersectionObserver((entries, observer) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const img = entry.target;
                    const src = img.getAttribute('data-src');
                    if (src) {
                        img.src = src;
                        img.removeAttribute('data-src');
                    }
                    observer.unobserve(img);
                }
            });
        });

        // Convert all image sources to lazy load
        document.querySelectorAll('img').forEach(img => {
            const currentSrc = img.src;
            img.setAttribute('data-src', currentSrc);
            img.src = 'data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7'; // Blank placeholder
            imageObserver.observe(img);
        });

        // Add stagger delay to product cards
        document.querySelectorAll('.row').forEach(row => {
            row.querySelectorAll('.col-4').forEach((card, index) => {
                card.style.transitionDelay = `${index * 0.2}s`;
            });
        });

        // Add stagger delay to testimonials
        document.querySelectorAll('.testimonial .col-3').forEach((testimonial, index) => {
            testimonial.style.transitionDelay = `${index * 0.2}s`;
        });
    });
</script>