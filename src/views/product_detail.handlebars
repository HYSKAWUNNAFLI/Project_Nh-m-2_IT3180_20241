<div class="small-container single-product">
    <div class="row">
        <div class="col-2">
            <img src="{{product.product_image}}" width="100%" id="productImg">
        </div>
        <div class="col-2">
            <a href="/" class="btn">Home</a>
            <h1>{{product.product_title}}</h1>
            <h4>${{product.product_price}}</h4>
            <select>
                <option>Select Size</option>
                <option>XXL</option>
                <option>XL</option>
                <option>Large</option>
                <option>Medium</option>
                <option>Small</option>
            </select>
            <input type="number" value="1">
            <a href="/cart/add/{{product.product_id}}" class="btn">Add To Cart</a>  <!--Sau nay lam Cart o day  -->
            <h3>Product Detail <i class="fa fa-indent"></i></h3>
            <br>
            <p>{{product.product_desc}}</p>
        </div>
    </div>
</div>


</div>
